<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Puppy Crawl//DTD Check Configuration 1.2//EN" "http://www.puppycrawl.com/dtds/configuration_1_2.dtd">

<module name="Checker">
  <!--MODULO HEADER -->
  <module name="Header">
    <property name="headerFile" value="LICENSE.txt"/>
    <property name="fileExtensions" value="java"/>
  </module>

  <module name="TreeWalker">
    <!--MODULI CYCLOMATIC COMPLEXITY, EMPTY CATCH BLOCK, AVOID STAR IMPORT, NEED BRACES-->
    <module name="CyclomaticComplexity"/>
    <module name="EmptyCatchBlock"/>
    <module name="AvoidStarImport"/>
    <module name="NeedBraces"/>
    <!--MODULI BOOLEAN EXPRESSION COMPLEXITY, METHOD LENGTH, ILLEGAL IMPORT -->
    <module name="BooleanExpressionComplexity"/>
    <module name="MethodLength"/>
    <module name="IllegalImport"/>
  </module>

  <!--MODULO LINE LENGTH -->
  <module name="LineLength">
    <property name="fileExtensions" value="java"/>
    <property name="max" value="120"/>
  </module>

  <!--MODULO FILE LENGTH -->
  <module name="FileLength">
    <property name="fileExtensions" value="java"/>
  </module>

  <!--MODULO FILE TAB CHECKER -->
  <module name="FileTabCharacter">
    <property name="fileExtensions" value="java"/>
  </module>

</module>


